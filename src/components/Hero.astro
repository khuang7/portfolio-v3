---
import Pill from "~/components/Pill.astro";
const { title, message, hideCta, customCta } = Astro.props;
---

<div class="mx-auto py-8 w-full">
  <div
    class="relative isolate overflow-hidden px-6 py-12 text-center sm:rounded-3xl sm:px-16 rounded-md border-2 border-black bg-yellow-200 font-bold shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] flex items-center flex-col"
  >
    <h2
      class="mx-auto max-w-2xl text-3xl font-bold tracking-tight text-black sm:text-4xl"
    >
      {title}
    </h2>
    <p
      class="mx-auto mt-6 max-w-xl text-2xl leading-8 text-gray-900 font-medium"
    >
      {message}
    </p>

    <slot />
  </div>
</div>
